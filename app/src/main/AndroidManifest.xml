<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.stellajovanovic.hotelapplication">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainMenu.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".CheckIn.CheckInActivity"
                  android:parentActivityName=".MainMenu.MainActivity">
        </activity>
        <activity android:name=".MakeRequest.MakeRequestActivity"
                  android:parentActivityName=".MainMenu.MainActivity">
        </activity>
        <activity android:name=".RoomService.RoomServiceActivity"
                  android:parentActivityName=".MainMenu.MainActivity">
        </activity>
        <activity android:name=".OutAndABout.OutAndAboutActivity"
                  android:parentActivityName=".MainMenu.MainActivity">
        </activity>
        <activity android:name=".CallReception.CallReceptionActivity"
                  android:parentActivityName=".MainMenu.MainActivity">
        </activity>
        <activity android:name=".HotelInfo.HotelInformationActivity"
                  android:parentActivityName=".MainMenu.MainActivity">
        </activity>
    </application>

</manifest>